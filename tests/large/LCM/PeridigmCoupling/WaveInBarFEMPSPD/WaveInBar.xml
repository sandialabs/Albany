<ParameterList>
  <ParameterList name="Problem">

    <Parameter name="Name" type="string" value="Peridigm Code Coupling"/>

    <Parameter name="Solution Method" type="string" value="Transient"/>
    <Parameter name="Second Order" type="string" value="Velocity Verlet"/>
    <Parameter name="Perturb Dirichlet" type="double" value="1.0e-6"/>

    <Parameter name="MaterialDB Filename" type="string" value="WaveInBarMaterials.xml"/>
    <ParameterList name="Peridigm Parameters">
      <ParameterList name="Discretization">
        <Parameter name="Type" type="string" value="Albany" />
      </ParameterList>
      <ParameterList name="Materials">
        <ParameterList name="My Elastic Correspondence Material">
	  <Parameter name="Material Model" type="string" value="Elastic Correspondence"/>
	  <Parameter name="Density" type="double" value="2200.0"/>
	  <Parameter name="Bulk Modulus" type="double" value="14.90e9"/>
	  <Parameter name="Shear Modulus" type="double" value="8.94e9"/>
          <Parameter name="Hourglass Coefficient" type="double" value="0.05"/>
	</ParameterList>
        <ParameterList name="My Elastic Material">
	  <Parameter name="Material Model" type="string" value="Elastic"/>
	  <Parameter name="Apply Shear Correction Factor" type="bool" value="false"/>
	  <Parameter name="Density" type="double" value="2200.0"/>
	  <Parameter name="Bulk Modulus" type="double" value="14.90e9"/>
	  <Parameter name="Shear Modulus" type="double" value="8.94e9"/>
	</ParameterList>
      </ParameterList>
      <ParameterList name="Blocks">
	<ParameterList name="Partial Stress Blocks">
	  <Parameter name="Block Names" type="string" value="block_2"/>
	  <Parameter name="Material" type="string" value="My Elastic Correspondence Material"/>
          <Parameter name="Horizon" type="double" value="0.0019"/>
	</ParameterList>
	<ParameterList name="Peridynamics Blocks">
	  <Parameter name="Block Names" type="string" value="block_3"/>
	  <Parameter name="Material" type="string" value="My Elastic Correspondence Material"/>
          <Parameter name="Horizon" type="double" value="0.0019"/>
	</ParameterList>
      </ParameterList>
      <ParameterList name="Output">
<!--
        <Parameter name="Output Filename" type="string" value="WaveInBar_PeridigmResults"/>
        <Parameter name="Output Frequency" type="int" value="1"/>
-->
        <ParameterList name="Output Variables">
          <Parameter name="Displacement" type="bool" value="true"/>
          <Parameter name="Force" type="bool" value="true"/>
          <Parameter name="Velocity" type="bool" value="true"/>
          <Parameter name="Radius" type="bool" value="true"/>
          <Parameter name="Volume" type="bool" value="true"/>
          <Parameter name="Number_Of_Neighbors" type="bool" value="true"/>
        </ParameterList>
      </ParameterList>
    </ParameterList>

    <ParameterList name="Initial Condition Dot">
      <Parameter name="Function" type="string" value="Expression Parser"/>
      <Parameter name="Function Expression for DOF X" type="string" value="if( !(x > -0.01501) ){ value = -100.0; }else{ value = 0.0; }"/>
    </ParameterList>

    <ParameterList name="Dirichlet BCs">
      <!-- BC for coupling peridynamic partial stress elements with meshfree peridynamic elements -->
      <ParameterList name="DBC on NS nodelist_1 for DOF lsfit">
        <Parameter name="Perturb Dirichlet" type="double" value="1.0e-6"/>
        <Parameter name="Time Step" type="double" value="9.0e-8"/>
      </ParameterList>
    </ParameterList>

  </ParameterList>

  <ParameterList name="Discretization">
    <Parameter name="Method" type="string" value="Exodus"/>
    <Parameter name="Exodus Input File Name" type="string" value="WaveInBar.g"/>
    <Parameter name="Exodus Output File Name" type="string" value="WaveInBar.e"/>
    <Parameter name="Exodus Write Interval" type="int" value="30"/>
    <Parameter name="Cubature Degree" type="int" value="2"/>
    <Parameter name="Separate Evaluators by Element Block" type="bool" value="true"/>
    <Parameter name="Solution Vector Components" type="Array(string)" value="{displacement, V}"/>
    <Parameter name="Residual Vector Components" type="Array(string)" value="{force, V}"/>
  </ParameterList>

  <ParameterList name="Piro">
    <ParameterList name="Velocity Verlet">
      <Parameter name="Num Time Steps" type="int" value="220"/>
      <Parameter name="Final Time" type="double" value="0.00002"/>
      <Parameter name="Initial Time" type="double" value="0.0"/>
      <Parameter name="Invert Mass Matrix" type="bool" value="true"/>
      <Parameter name="Lump Mass Matrix" type="bool" value="true"/>
      <ParameterList name="Stratimikos">
	<Parameter name="Linear Solver Type" type="string" value="Belos"/>
	<ParameterList name="Linear Solver Types">
	  <ParameterList name="Belos">
	    <Parameter name="Solver Type" type="string" value="Block GMRES"/>
	    <ParameterList name="Solver Types">
	      <ParameterList name="Block GMRES">
		<Parameter name="Convergence Tolerance" type="double" value="1e-5"/>
		<Parameter name="Output Frequency" type="int" value="10"/>
		<Parameter name="Output Style" type="int" value="1"/>
		<Parameter name="Verbosity" type="int" value="33"/>
		<Parameter name="Maximum Iterations" type="int" value="100"/>
		<Parameter name="Block Size" type="int" value="1"/>
		<Parameter name="Num Blocks" type="int" value="100"/>
		<Parameter name="Flexible Gmres" type="bool" value="0"/>
	      </ParameterList>
	    </ParameterList>
	  </ParameterList>
	</ParameterList>
	<Parameter name="Preconditioner Type" type="string" value="Ifpack"/>
	<ParameterList name="Preconditioner Types">
	  <ParameterList name="Ifpack">
	    <Parameter name="Prec Type" type="string" value="ILU"/>
	    <Parameter name="Overlap" type="int" value="1"/>
	    <ParameterList name="Ifpack Settings">
	      <Parameter name="fact: level-of-fill" type="int" value="1"/>
	    </ParameterList>
	  </ParameterList>
	</ParameterList>
      </ParameterList>
    </ParameterList>
  </ParameterList>
</ParameterList>
