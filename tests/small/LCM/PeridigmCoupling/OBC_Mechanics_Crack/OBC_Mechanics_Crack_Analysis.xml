            <Parameter name="Projected Gradient Criticality Measure" type="bool" value="false" />

            <!-- ===========  SECANT INPUTS  =========== -->
            <ParameterList name="Secant">
              <Parameter name="Type"                   type="string" value="Limited-Memory BFGS" />
