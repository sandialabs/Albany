
rm -rf CMake*
PWD=`pwd`
INSTALL_DIR=$PWD/install

#IKT FIXME: the following paths aren't read by cdash 
#and are hence hard-coded below - need to fix this.

BLAS_PATH=${NETLIB_LAPACK_ROOT}
SUPERLU_PATH=${SUPERLU_ROOT}
BOOST_PATH=${BOOST_ROOT}
NETCDF_PATH=${NETCDF_C_ROOT}
PNETCDF_PATH=${PARALLEL_NETCDF_ROOT}
HDF5_PATH=${HDF5_ROOT}
METIS_PATH=${METIS_ROOT}
PARMETIS_PATH=${PARMETIS_ROOT}

cmake \
  -D CMAKE_INSTALL_PREFIX:PATH=${INSTALL_DIR} \
  -D CMAKE_BUILD_TYPE:STRING=RELEASE \
  -D CMAKE_CXX_COMPILER:FILEPATH=mpicxx \
  -D CMAKE_C_COMPILER:FILEPATH=mpicc \
  -D CMAKE_Fortran_COMPILER:FILEPATH=mpif77 \
  -D CMAKE_CXX_FLAGS:STRING='-Wno-use-after-free' \
  -D CMAKE_VERBOSE_MAKEFILE:BOOL=OFF \
  -D TPL_ENABLE_MPI:BOOL=ON \
  -D TPL_ENABLE_BLAS=ON \
  -D BLAS_LIBRARY_DIRS=${BLAS_PATH}/lib \
  -D BLAS_INCLUDE_DIRS=${BLAS_PATH}/include \
  -D TPL_ENABLE_LAPACK=ON \
  -D LAPACK_LIBRARY_DIRS=${BLAS_PATH}/lib \
  -D LAPACK_INCLUDE_DIRS=${BLAS_PATH}/include \
  -D TPL_ENABLE_SuperLU=ON \
  -D Trilinos_ENABLE_SuperLU5_API=ON \
  -D TPL_SuperLU_LIBRARIES:PATH=${SUPERLU_PATH}/lib/libsuperlu.a \
  -D SuperLU_INCLUDE_DIRS:PATH=${SUPERLU_PATH}/include \
  -D TPL_ENABLE_Boost:BOOL=ON \
  -D Boost_INCLUDE_DIRS:PATH=${BOOST_PATH}/include \
  -D TPL_ENABLE_Netcdf:BOOL=ON \
  -D Netcdf_INCLUDE_DIRS:PATH=${NETCDF_PATH}/include \
  -D Netcdf_LIBRARY_DIRS:PATH=${NETCDF_PATH}/lib \
  -D TPL_Netcdf_PARALLEL:BOOL=ON \
  -D TPL_ENABLE_Pnetcdf=ON \
  -D Pnetcdf_INCLUDE_DIRS:PATH=${PNETCDF_PATH}/include \
  -D Pnetcdf_LIBRARY_DIRS:PATH=${PNETCDF_PATH}/lib \
  -D TPL_ENABLE_HDF5:BOOL=ON \
  -D HDF5_INCLUDE_DIRS:PATH=${HDF5_PATH}/include \
  -D HDF5_LIBRARY_DIRS:PATH=${HDF5_PATH}/lib \
  -D TPL_ENABLE_METIS:BOOL=ON \
  -D METIS_INCLUDE_DIRS:FILEPATH=${METIS_PATH}/include \
  -D METIS_LIBRARY_DIRS:FILEPATH=${METIS_PATH}/lib \
  -D TPL_ENABLE_ParMETIS:BOOL=ON \
  -D ParMETIS_INCLUDE_DIRS:FILEPATH=${PARMETIS_PATH}/include \
  -D ParMETIS_LIBRARY_DIRS:FILEPATH=${PARMETIS_PATH}/lib \
  -D TPL_ENABLE_Matio:BOOL=OFF \
  -D TPL_ENABLE_X11:BOOL=OFF \
  -D BUILD_SHARED_LIBS:BOOL=ON \
  -D TPL_FIND_SHARED_LIBS:BOOL=ON \
  -D Anasazi_ENABLE_RBGen:BOOL=ON \
  -D Belos_HIDE_DEPRECATED_CODE=ON  \
  -D Ifpack2_HIDE_DEPRECATED_CODE=ON \
  -D Ifpack2_ENABLE_DEPRECATED_CODE=OFF \
  -D Kokkos_ARCH_SPR:BOOL=ON \
  -D Kokkos_ENABLE_OPENMP:BOOL=OFF \
  -D Kokkos_ENABLE_SERIAL:BOOL=ON \
  -D MueLu_ENABLE_DEPRECATED_CODE=OFF \
  -D Panzer_HIDE_DEPRECATED_CODE=ON  \
  -D Phalanx_ALLOW_MULTIPLE_EVALUATORS_FOR_SAME_FIELD:BOOL=OFF \
  -D Phalanx_ENABLE_TESTS:BOOL=OFF \
  -D Phalanx_ENABLE_TEUCHOS_TIME_MONITOR:BOOL=ON \
  -D Phalanx_HIDE_DEPRECATED_CODE=ON \
  -D Phalanx_INDEX_SIZE_TYPE:STRING='INT' \
  -D Phalanx_KOKKOS_DEVICE_TYPE:STRING='SERIAL' \
  -D Phalanx_SHOW_DEPRECATED_WARNINGS:BOOL=OFF \
  -D Piro_ENABLE_TESTS:BOOL=OFF \
  -D ROL_ENABLE_TESTS:BOOL=OFF \
  -D ROL_ENABLE_EXAMPLES:BOOL=OFF \
  -D Sacado_ENABLE_TESTS:BOOL=OFF \
  -D STK_HIDE_DEPRECATED_CODE=ON \
  -D Tacho_ENABLE_INT_INT:BOOL=ON \
  -D Teuchos_HIDE_DEPRECATED_CODE=OFF\
  -D Thyra_HIDE_DEPRECATED_CODE=ON \
  -D Zoltan_ENABLE_ULONG_IDS:BOOL=ON \
  -D Stratimikos_ENABLE_TEUCHOS_TIME_MONITOR:BOOL=ON \
  -D Trilinos_ENABLE_EXPLICIT_INSTANTIATION:BOOL=ON \
  -D Trilinos_ASSERT_DEFINED_DEPENDENCIES:BOOL=OFF \
  -D Trilinos_VERBOSE_CONFIGURE:BOOL=OFF \
  -D Trilinos_WARNINGS_AS_ERRORS_FLAGS:STRING='' \
  -D Trilinos_ENABLE_ALL_PACKAGES:BOOL=OFF \
  -D Trilinos_ENABLE_ALL_OPTIONAL_PACKAGES:BOOL=OFF \
  -D Trilinos_ENABLE_Amesos2:BOOL=ON \
  -D Trilinos_ENABLE_Anasazi:BOOL=ON \
  -D Trilinos_ENABLE_Belos:BOOL=ON \
  -D Trilinos_ENABLE_EXAMPLES:BOOL=OFF \
  -D Trilinos_ENABLE_Ifpack2:BOOL=ON \
  -D Trilinos_ENABLE_Intrepid2:BOOL=ON \
  -D Trilinos_ENABLE_Kokkos:BOOL=ON \
  -D Trilinos_ENABLE_MueLu:BOOL=ON \
  -D Trilinos_ENABLE_NOX:BOOL=ON \
  -D Trilinos_ENABLE_Pamgen:BOOL=ON \
  -D Trilinos_ENABLE_PanzerDofMgr:BOOL=ON \
  -D Trilinos_ENABLE_PanzerExprEval:BOOL=ON \
  -D Trilinos_ENABLE_Phalanx:BOOL=ON \
  -D Trilinos_ENABLE_Piro:BOOL=ON \
  -D Trilinos_ENABLE_ROL:BOOL=ON \
  -D Trilinos_ENABLE_SEACAS:BOOL=ON \
  -D Trilinos_ENABLE_SEACASIoss:BOOL=ON \
  -D Trilinos_ENABLE_SEACASExodus:BOOL=ON \
  -D Trilinos_ENABLE_STK:BOOL=ON \
  -D Trilinos_ENABLE_STKSearchUtil:BOOL=OFF \
  -D Trilinos_ENABLE_STKUnit_tests:BOOL=OFF \
  -D Trilinos_ENABLE_STKDoc_tests:BOOL=OFF \
  -D Trilinos_ENABLE_Sacado:BOOL=ON \
  -D Trilinos_ENABLE_Shards:BOOL=ON \
  -D Trilinos_ENABLE_ShyLU_DDFROSch:BOOL=ON \
  -D Trilinos_ENABLE_ShyLU_NodeTacho:BOOL=ON \
  -D Trilinos_ENABLE_Stratimikos:BOOL=ON \
  -D Trilinos_ENABLE_TESTS:BOOL=OFF \
  -D Trilinos_ENABLE_Teko:BOOL=ON \
  -D Trilinos_ENABLE_Tempus:BOOL=ON \
  -D Trilinos_ENABLE_Teuchos:BOOL=ON \
  -D Trilinos_ENABLE_Thyra:BOOL=ON \
  -D Trilinos_ENABLE_ThyraTpetraAdapters:BOOL=ON \
  -D Trilinos_ENABLE_Tpetra:BOOL=ON \
  -D Trilinos_ENABLE_Zoltan2:BOOL=ON \
  -D Trilinos_ENABLE_Zoltan:BOOL=ON \
..
