
rm -rf CMake* 

TRILINSTALLDIR="/home/projects/albany/nightlyCDashTrilinosBlake/build-intel/TrilinosSerialInstall"
SFAD_SIZE=4 

cmake \
  -D ALBANY_TRILINOS_DIR:FILEPATH=${TRILINSTALLDIR} \
  -D ENABLE_LANDICE:BOOL=ON \
  -D ENABLE_DEMO_PDES:BOOL=ON \
  -D ENABLE_KOKKOS_UNDER_DEVELOPMENT:BOOL=ON \
  -D ENABLE_CHECK_FPE:BOOL=OFF \
  -D DISABLE_ALBANY_TESTS:BOOL=ON \
  -D ALBANY_MPI_EXEC_TRAILING_OPTIONS='--map-by ppr:1:core:pe=4' \
  -D ENABLE_FAD_TYPE:STRING='SFad' \
  -D ALBANY_SFAD_SIZE=${SFAD_SIZE} \
..
