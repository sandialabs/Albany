#!/bin/bash
# SCORPIO build script
rm -rf CMake*

SCORPIO_INSTALL=
CC=mpicc
CXX=mpicxx
FC=mpif90

cmake \
  -D CMAKE_INSTALL_PREFIX:PATH=${SCORPIO_INSTALL} \
  -D PnetCDF_PATH=${PARALLEL_NETCDF_ROOT} \
  -D NetCDF_C_PATH=${NETCDF_C_ROOT} \
  -D NetCDF_Fortran_PATH=${NETCDF_FORTRAN_ROOT} \
  -D PIO_ENABLE_TIMING=OFF \
..
