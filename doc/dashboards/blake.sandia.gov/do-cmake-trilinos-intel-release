rm -rf CMake*

PWD=`pwd`
INSTALL_DIR=$PWD/install

#IKT FIXME: the following paths aren't read by cdash 
#and are hence hard-coded below - need to fix this.

BOOST_PATH=/home/projects/albany/tpls/boost/1.83.0/oneapi/2023.2.0
NETCDF_PATH=${NETCDF_C_ROOT}
PNETCDF_PATH=${PARALLEL_NETCDF_ROOT}
HDF5_PATH=${HDF5_ROOT}
SUPERLU_PATH=${SUPERLU_ROOT}
MKL_PATH=${MKLROOT}

#ZLIB_PATH=${ZLIB_ROOT} # zlib module not working
#      -D TPL_ENABLE_Zlib=ON \
#      -D Zlib_INCLUDE_DIRS:PATH=${ZLIB_PATH}/include \
#      -D Zlib_LIBRARY_DIRS:PATH=${ZLIB_PATH}/lib \

cmake \
      -D CMAKE_INSTALL_PREFIX:PATH=${INSTALL_DIR} \
      -D CMAKE_BUILD_TYPE:STRING=RELEASE \
      -D CMAKE_CXX_COMPILER:FILEPATH=mpiicpx \
      -D CMAKE_C_COMPILER:FILEPATH=mpiicx \
      -D CMAKE_Fortran_COMPILER:FILEPATH=mpiifx \
      -D CMAKE_CXX_FLAGS:STRING="-fp-model=precise" \
      -D CMAKE_VERBOSE_MAKEFILE:BOOL=OFF \
      -D TPL_ENABLE_MPI:BOOL=ON \
      -D TPL_ENABLE_BLAS=ON \
      -D BLAS_LIBRARY_DIRS:FILEPATH="${MKL_PATH}/lib/intel64" \
      -D BLAS_LIBRARY_NAMES:STRING="mkl_rt" \
      -D TPL_ENABLE_LAPACK=ON \
      -D LAPACK_LIBRARY_DIRS:FILEPATH="${MKL_PATH}/lib/intel64" \
      -D LAPACK_LIBRARY_NAMES:STRING="mkl_rt" \
      -D TPL_ENABLE_MKL=ON \
      -D MKL_LIBRARY_DIRS:FILEPATH="${MKL_PATH}/lib/intel64" \
      -D MKL_LIBRARY_NAMES:STRING="mkl_rt" \
      -D MKL_INCLUDE_DIRS:FILEPATH="${MKL_PATH}/include" \
      -D TPL_ENABLE_PARDISO_MKL:BOOL=ON \
      -D PARDISO_MKL_LIBRARY_DIRS:FILEPATH="${MKL_PATH}/lib/intel64" \
      -D PARDISO_MKL_LIBRARY_NAMES:STRING="mkl_rt" \
      -D PARDISO_MKL_INCLUDE_DIRS:FILEPATH="${MKL_PATH}/include" \
      -D TPL_ENABLE_SuperLU=OFF \
      -D Trilinos_ENABLE_SuperLU5_API=ON \
      -D TPL_SuperLU_LIBRARIES:PATH=${SUPERLU_PATH}/lib/libsuperlu.a \
      -D SuperLU_INCLUDE_DIRS:PATH=${SUPERLU_PATH}/include \
      -D TPL_ENABLE_Boost:BOOL=ON \
      -D Boost_INCLUDE_DIRS:PATH=${BOOST_PATH}/include \
      -D TPL_ENABLE_Netcdf:BOOL=ON \
      -D Netcdf_INCLUDE_DIRS:PATH=${NETCDF_PATH}/include \
      -D Netcdf_LIBRARY_DIRS:PATH=${NETCDF_PATH}/lib \
      -D TPL_Netcdf_PARALLEL:BOOL=ON \
      -D TPL_ENABLE_Pnetcdf=ON \
      -D Pnetcdf_INCLUDE_DIRS:PATH=${PNETCDF_PATH}/include \
      -D Pnetcdf_LIBRARY_DIRS:PATH=${PNETCDF_PATH}/lib \
      -D TPL_ENABLE_HDF5:BOOL=ON \
      -D HDF5_INCLUDE_DIRS:PATH=${HDF5_PATH}/include \
      -D HDF5_LIBRARY_DIRS:PATH=${HDF5_PATH}/lib \
