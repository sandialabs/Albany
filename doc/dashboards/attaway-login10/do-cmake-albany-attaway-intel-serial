
rm -rf CMake*

cmake \
    -D ALBANY_TRILINOS_DIR:FILEPATH=${TRILINSTALLDIR} \
    -D CMAKE_C_FLAGS:STRING="-mkl" \
    -D CMAKE_CXX_FLAGS:STRING="-mkl" \
    -D CMAKE_Fortran_FLAGS:STRING="-mkl" \
    -D CMAKE_EXE_LINKER_FLAGS:STRING="-mkl" \
    -D CMAKE_CXX_COMPILER=mpicxx \
    -D CMAKE_C_COMPILER=mpicc \
    -D CMAKE_VERBOSE_MAKEFILE=ON \
    -D ENABLE_LANDICE:BOOL=ON \
    -D ENABLE_DEMO_PDES:BOOL=ON \
    -D ENABLE_OMEGAH:BOOL=OFF \
    -D ENABLE_KOKKOS_UNDER_DEVELOPMENT:BOOL=ON \
    -D ALBANY_CTEST_TIMEOUT=500 \
    -D ENABLE_CHECK_FPE:BOOL=OFF \
..
