#!/bin/csh

rm -rf CMake*

cmake \
      -D ALBANY_TRILINOS_DIR:FILEPATH=${TRILINOS_INSTALL} \
      -D CMAKE_INSTALL_PREFIX:PATH=${ALBANY_INSTALL} \
      -D CMAKE_CXX_COMPILER=${NVCC} \
      -D CMAKE_C_COMPILER=${MPICC} \
      -D CMAKE_CXX_FLAGS:STRING="" \
      -D CMAKE_VERBOSE_MAKEFILE:BOOL=OFF \
      -D ENABLE_DEMO_PDES:BOOL=OFF \
      -D ENABLE_LANDICE:BOOL=ON \
      -D ENABLE_MESH_DEPENDS_ON_PARAMETERS:BOOL=OFF \
      -D BUILD_SHARED_LIBS:BOOL=ON \
      -D Albany_BUILD_STATIC_EXE:BOOL=OFF \
      -D CMAKE_INSTALL_RPATH:PATH=${ALBANY_INSTALL}/lib64 \
      -D CMAKE_INSTALL_RPATH_USE_LINK_PATH:BOOL=ON \
\
      -D ENABLE_FAD_TYPE:STRING="SFad" \
      -D ALBANY_SFAD_SIZE=${FAD_SIZE} \
      -D ENABLE_TAN_FAD_TYPE:STRING="SLFad" \
      -D ALBANY_TAN_SLFAD_SIZE=6 \
      -D ENABLE_HES_VEC_FAD_TYPE:STRING="SFad" \
      -D ALBANY_HES_VEC_SFAD_SIZE=${FAD_SIZE} \
\
      -D ENABLE_MPAS_INTERFACE:BOOL=ON \
      -D ENABLE_OMEGAH:BOOL=OFF \
