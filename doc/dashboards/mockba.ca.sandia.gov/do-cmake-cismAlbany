
rm -rf CMake* 

TRILINSTALLDIR=$BUILD_DIR/install 
ALBINSTALLDIR=

cmake \
    -Wno-dev \
    -D CISM_USE_TRILINOS:BOOL=ON \
    -D CMAKE_CXX_COMPILER=${OPENMPI_ROOT}/bin/mpicxx \
    -D CMAKE_C_COMPILER=${OPENMPI_ROOT}/bin/mpicc \
    -D CISM_TRILINOS_DIR=${TRILINSTALLDIR} \
    -D CISM_MPI_MODE:BOOL=ON \
    -D CISM_SERIAL_MODE:BOOL=OFF \
    -D CISM_BUILD_CISM_DRIVER:BOOL=ON \
    -D ALBANY_LANDICE_DYCORE:BOOL=ON \
    -D ALBANY_LANDICE_CTEST:BOOL=ON \
    -D CISM_ALBANY_DIR=${ALBINSTALLDIR} \
    -D CISM_MPI_BASE_DIR=${OPENMPI_ROOT} \
    -D CISM_NETCDF_DIR=${NETCDF_FORTRAN_ROOT} \
    -D CISM_NETCDF_LIBS='netcdff' \
    -D BUILD_SHARED_LIBS:BOOL=ON \
    -D CMAKE_Fortran_FLAGS='-g -ffree-line-length-none -fPIC -fno-range-check -fallow-argument-mismatch' \
    -D CMAKE_VERBOSE_MAKEFILE=OFF \
../..
