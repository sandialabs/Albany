#!/bin/bash
# Albany configure script on summit
rm -rf CMake*

# Point to Trilinos install path
TRILINOS_INSTALL=
ALBANY_DIR=
ALBANY_INSTALL=

cmake \
    -DALBANY_TRILINOS_DIR:FILEPATH=${TRILINOS_INSTALL} \
    -DCMAKE_INSTALL_PREFIX:PATH=${ALBANY_INSTALL} \
    -DCMAKE_VERBOSE_MAKEFILE:BOOL=OFF \
    -DENABLE_DEMO_PDES:BOOL=OFF \
    -DENABLE_LANDICE:BOOL=ON \
    -DENABLE_ALBANY_EPETRA:BOOL=OFF \
    -DALBANY_LIBRARIES_ONLY=OFF \
    -DENABLE_KOKKOS_UNDER_DEVELOPMENT:BOOL=ON \
    -DENABLE_FAD_TYPE:STRING="SLFad" \
    -DALBANY_SLFAD_SIZE=16 \
    -DENABLE_MPAS_INTERFACE:BOOL=ON \
    ${ALBANY_DIR}

#For debug build:
#  -D CMAKE_CXX_FLAGS:STRING="-g -G" \
#  -g is for host code, -G is for device code
#
